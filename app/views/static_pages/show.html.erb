<h1><br/>Listing Users</h1>
<script>
  $(document).ready(function() {
    $('.datatable').dataTable();
  } );
</script>
<table id ="datatable">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.phone %></td>
        
        <td><%= link_to 'Edit', edit_user_path(user) %></td>

        <td><%= link_to 'Destroy', "users/destroy/#{user.id}", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
