<!DOCTYPE html>
<html>
<head>
  <title>DeviseConfig</title>
  <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.css">
  <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap-theme.css">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

<style>
  body {
    text-align: center;
  }
</style>

</head>
<body>
<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>


 <%= render 'layouts/menu' %>


 <% if current_user %>
    Welcome <%= current_user.email %> <!--%= link_to 'Logout', destroy_user_session_path, method: :delete %--> <br>
    Name <%= current_user.name %><br>
    DOB <%= current_user.date_of_birth %><br>
    Address <%= current_user.address %><br>
    Phone <%= current_user.phone %><br>
   
    <p>
  <strong>Image:</strong>
  <%= image_tag current_user.image.thumb.url %>
</p>
    <table align = "center">
  <thead>
    <tr>
      <th>Leave Type</th>
      <th>&nbsp; &nbsp; Leaves Taken</th>
      <th>&nbsp; &nbsp; Leaves Left</th>
      <th>&nbsp; &nbsp; Financial Year</th>
      <!--th colspan="5"></th-->
    </tr>
  </thead>
  <% @ul = current_user.user_leaves %>
  <tbody>
    <% @ul.each do |ul1| %>
      <tr>
        <td><%= ul1.leave_type %></td>
        <td><%= ul1.leave_taken %></td>
        <td><%= ul1.leave_left %></td>
        <td><%= ul1.fin_year %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% else %>
    <!--%= link_to 'Login', new_user_session_path %-->
<% end %>

 <%= yield %>
<!--div id="calendar", style="size: 100px;"></div-->
<%#=# month_calendar do |date| %>
  <%#= date %>
<%#s end %>
</body>
</html>
