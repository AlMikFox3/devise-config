<!DOCTYPE html>
<html>
<head>
  <title>DeviseConfig</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>


 <%= render 'layouts/menu' %>


 <% if current_user %>
    Welcome <%= current_user.email %> <%= link_to 'Logout', destroy_user_session_path, method: :delete %> <br>
    Name <%= current_user.name %><br>
    DOB <%= current_user.date_of_birth %><br>
    <p>
  <strong>Image:</strong>
  <%= image_tag current_user.image.thumb.url %>
</p>

<% else %>
    <%= link_to 'Login', new_user_session_path %>
<% end %>

 <%= yield %>

</body>
</html>
